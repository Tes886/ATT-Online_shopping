<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation-user.ejs') %>

    <main>
        <% if (products.length > 0) { %>
        <ul class="cart__item-list">
            <% products.forEach(p => { %>
            <li class="cart__item">
                <h1><%= p.productId.title %></h1>
                <h2>Quantity: <%= p.quantity %></h2>
                <h2>price: $ <%= p.productId.price %></h2>

                <form action="/cart-delete-single-item" method="POST">
                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                    <button class="btn danger" type="submit">Delete Item</button>
                </form>
                <form action="/cart-delete-item" method="POST">
                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                    <button class="btn danger" type="submit">Delete All</button>
                </form>

            </li>
             TotalPrice: <%= p.productId.price *p.quantity %></h2>
            <% }) %>
            
        </ul>
        <hr>
        <div class="centered">
            <form action="/payement" method="GET">
                <button type="submit" class="btn">Place an Order </button>
            </form>
        </div>

        <% } else { %>
        <h1>No Products in Cart!</h1>
       
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>